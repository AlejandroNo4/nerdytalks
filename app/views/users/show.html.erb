<div class="row bg-light">
  <div class="col-12 col-xl-8 p-0">

    <div class="row m-0 bg-light border-bottom">
      <div class="col-2 d-flex align-items-center h-gray-bar justify-content-center border-talks">
        <span class="fw-bold">Talks</span>
      </div>
    </div>

    <div class="cover-image">
      This is the cover image part
    </div>

    <div class="d-flex flex-column white-boxes">
      <span class="blue-bold-text">
        New Talks
      </span>
      <div class="border-top mt-3 mb-3">
      </div>
      <% @user.talks.each do |talk| %>

        <div class="d-flex mt-1 mb-1 pb-1 border-bottom">
          <div class="border size-img-info">
            <%= @user.photo %>
          </div>
          <div class="d-flex flex-column ms-3">
            <span class="author-name-static"><%= @user.full_name%></span>
            <span class="talk-body"><%= talk.text %></span>
            <%
=begin%>
 <span><%= destroy_talk(talk) %></span> 
<%
=end%>
          </div>
        </div>

      <% end %>
    </div>
  </div>

  <div class="col-12 col-xl-4 border-start">
    <div class="p-3 d-flex flex-column align-items-center">
      <div class="rounded-circle border text-center img-right-bio">
        <%= @user.photo %>
      </div>
      <span class="author-name-static mt-2">
        <%= @user.full_name.upcase %>
      </span>
      <span class="gray-text-userpage">
        @<%= @user.username %>
      </span>
      <div class="mt-2">
        <%= button_follow_unfollow(@user) %>
      </div>
    </div>
    <div class="d-flex border-top border-bottom justify-content-around">
      <div class="d-flex flex-column align-items-center">
        <span>
          <%= @user.talks.count %>
        </span>
        <span class="gray-text-userpage">
          Talks
        </span>
      </div>
      <div class="d-flex flex-column align-items-center">
        <span>
          <%= @user.followers.count %>
        </span>
        <span class="gray-text-userpage">
          Followers
        </span>
      </div>
      <div class="d-flex flex-column align-items-center">
        <span>
          <%= @user.followeds.count %>
        </span>
        <span class="gray-text-userpage">
          Following
        </span>
      </div>  
    </div>
    <div class="p-3 border-bottom form-text">
      FOLLOWED BY
    </div>
      <% @user.followers_id.each do |f_id| %>

        <div class="d-flex pt-2 pb-2 border-bottom">
          <div class="rounded-circle border text-center mini-img-right-bio">
            <%= find_user(f_id).photo %>
          </div>
          <div class="d-flex flex-column ms-2">
            <span>
              <%= link_to find_user(f_id).full_name, user_path(find_user(f_id).id), class: "author-name" %>
            </span>
            <span class="gray-text-userpage">
              @<%= find_user(f_id).username  %>
            </span>
          </div>
        </div> 

      <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
